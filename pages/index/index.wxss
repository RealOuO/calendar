/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.section__title{
 margin-bottom: 16rpx;
 padding-left: 30rpx;
 padding-right: 30rpx;
}
.picker{
 padding: 30rpx;
 background-color: #FFFFFF;
}

.textarea{
 padding: 30rpx;
}
 
.weui_cell_hd {
	display: inline-block;
 padding: 30rpx;
	width: 25px;
	margin-right: 15px;
}
 
.weui_cell_hd image {
	width: 100%;
	height: 25px;
	vertical-align: -2px;
}
 
 
.weui_cell_bd {
	display: inline-block;
}
 
.weui_cell_bd_p {
	font-size: 16px;
  margin-left: 230rpx;
  font-weight: bold;
	color: #353535;
}

.show-bottom {
  position: relative;
}
.show-bottom .show-bottom-wrap {
  position: absolute;
  width: 50%;
  height: 80rpx;
  border: 1rpx solid #FCC0A4;
  padding: 8rpx;
  top: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.show-bottom .show-bottom-wrap .show {
  line-height: 80rpx;
  font-size: 44rpx;
  background-color: #FCC0A4;
  color: #fff;
}
